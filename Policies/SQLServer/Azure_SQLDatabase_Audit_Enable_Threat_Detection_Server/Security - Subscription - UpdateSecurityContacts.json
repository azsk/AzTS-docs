{
  "mode": "All",
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "DeployIfNotExists",
        "AuditIfNotExists",
        "Disabled"
      ],
      "defaultValue": "DeployIfNotExists"
    },
    "emailAddress": {
      "type": "String",
      "metadata": {
        "description": "Email address for security contact",
        "displayName": "Email address for security contact"
      }
    }
  },
  "policyRule": {
    "if": {
      "field": "type",
      "equals": "Microsoft.Resources/subscriptions"
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Security/securityContacts",
        "name": "Default",
        "deploymentScope": "subscription",
        "existenceScope": "subscription",
        "roleDefinitionIds": [
          "/providers/Microsoft.Authorization/roleDefinitions/fb1c8493-542b-48eb-b624-b4c8fea62acd"
        ],
        "existenceCondition": {
          "anyOf": [
            {
              "field": "Microsoft.Security/securityContacts/email",
              "notEquals": ""
            },
            {
              "count": {
                "field": "Microsoft.Security/securityContacts/notificationsByRole.roles[*]",
                "where": {
                  "field": "Microsoft.Security/securityContacts/notificationsByRole.roles[*]",
                  "in": [
                    "Owner",
                    "ServiceAdmin"
                  ]
                }
              },
              "equals": 2
            }
          ]
        },
        "deployment": {
          "location": "westeurope",
          "properties": {
            "mode": "incremental",
            "parameters": {
              "emailAddress": {
                "value": "[parameters('emailAddress')]"
              }
            },
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "parameters": {
                "emailAddress": {
                  "type": "string"
                }
              },
              "variables": {},
              "resources": [
                {
                  "type": "Microsoft.Security/securityContacts",
                  "apiVersion": "2017-08-01-preview",
                  "name": "default",
                  "properties": {
                    "alertNotifications": "On",
                    "alertsToAdmins": "On",
                    "email": "[parameters('emailAddress')]"
                  }
                }
              ],
              "outputs": {}
            }
          }
        }
      }
    }
  }
}